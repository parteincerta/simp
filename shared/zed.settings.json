{
	"comments": [
		{
			"data": "https://zed.dev/docs/configuring-zed",
			"comment": "To see all default settings run the `open default settings` command"
		}
	],
	"auto_update": false,
	"buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
	"buffer_font_size": ${font_size},
	"ensure_final_newline_on_save": true,
	"hard_tabs": true,
	"indent_guides": {
		"enabled": true,
		"coloring": "indent_aware"
	},
	"inlay_hints": {
		"enabled": false
	},
	"languages": {
		"JSON": {
			"format_on_save": "off"
		},
		"Lua": {
			"format_on_save": "off"
		}
	},
	"relative_line_numbers": true,
	"terminal": {
		"font_family": "JetBrainsMonoNL Nerd Font Mono",
		"font_size": ${font_size},
		"env": {
			"SHELL": "fish"
		},
		"shell": {
			"with_arguments": {
				"program": "fish",
				"args": ["--interactive", "--login"]
			}
		},
		"working_directory": "current_project_directory"
	},
	"tab_size": 2,
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"show_wrap_guides": true,
	"theme": {
		"mode": "system",
		"light": "Solarized Light",
		"dark": "Andromeda"
	},
	"ui_font_size": 14,
	"vim_mode": true,
	"vim": {
		"use_multiline_find": true,
		"use_system_clipboard": "never"
	},
	"wrap_guides": [80, 120, 160]
}
